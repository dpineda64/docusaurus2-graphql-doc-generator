{
  "name": "@edno/docusaurus2-graphql-doc-generator",
  "homepage": "https://github.com/edno/docusaurus2-graphql-doc-generator",
  "version": "1.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "keywords": [
    "docusaurus2",
    "graphql",
    "graphql-schema",
    "documentation",
    "plugin"
  ],
  "author": "Gregory Heitz",
  "scripts": {
    "prettier": "prettier --write .",
    "lint": "eslint --cache --fix .",
    "lint:ci": "eslint .",
    "danger": "danger local -b main --failOnErrors",
    "danger:ci": "danger ci -b main",
    "test": "jest",
    "test:unit": "jest --projects tests/unit",
    "test:integration": "jest --projects tests/integration",
    "test:ci": "jest --runInBand --noStackTrace --ci",
    "test:e2e": "docker-compose run --rm docusaurus2-graphql-doc-generator jest",
    "pre-commit": "yarn prettier && yarn lint",
    "pre-push": "yarn lint:ci && yarn test --bail && yarn test:coverage && yarn danger",
    "test:stryker": "stryker run",
    "test:stryker:ci": "stryker run --reporters=progress-append-only --reporters=clear-text",
    "test:coverage": "sh ./scripts/coverage.sh",
    "demo": "docker-compose run --service-ports --rm --workdir=\"/usr/src/app/docusaurus2\" docusaurus2-graphql-doc-generator sh start-demo.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pre-commit",
      "pre-push": "yarn pre-push"
    }
  },
  "dependencies": {
    "@graphql-inspector/core": "2.3.0",
    "@graphql-tools/graphql-file-loader": "6.2.6",
    "@graphql-tools/json-file-loader": "6.2.6",
    "@graphql-tools/load": "6.2.5",
    "@graphql-tools/url-loader": "6.4.0",
    "@oclif/command": "1.8.0",
    "chalk": "4.1.0",
    "fs-extra": "9.0.1",
    "graphql": "15.4.0",
    "graphql-tools": "7.0.2",
    "import": "0.0.6",
    "lodash": "4.17.20",
    "moment": "2.29.1",
    "prettier": "2.2.0",
    "slugify": "1.4.6"
  },
  "devDependencies": {
    "@stryker-mutator/core": "4.0.0",
    "@stryker-mutator/jest-runner": "4.1.1",
    "@types/fs-extra": "9.0.4",
    "@types/graphql": "14.5.0",
    "@types/lodash": "4.14.165",
    "@typescript-eslint/eslint-plugin": "4.9.0",
    "@typescript-eslint/parser": "4.9.0",
    "colors": "1.4.0",
    "commander": "6.2.0",
    "danger": "10.5.3",
    "diff": "5.0.0",
    "directory-tree": "2.2.5",
    "eslint": "7.14.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-jest": "24.1.3",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.3.0",
    "jest": "26.6.3",
    "mock-fs": "4.13.0",
    "nyc": "15.1.0",
    "typescript": "4.1.2",
    "yarn": "1.22.10"
  },
  "prettier": {
    "singleQuote": false,
    "bracketSpacing": true,
    "proseWrap": "preserve",
    "overrides": [
      {
        "files": "*.js",
        "options": {
          "arrowParens": "always",
          "printWidth": 80,
          "trailingComma": "all",
          "tabWidth": 2
        }
      }
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "env": {
      "node": true,
      "es6": true,
      "jest": true,
      "commonjs": true,
      "jest/globals": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".ts"
          ]
        }
      }
    },
    "parserOptions": {
      "ecmaVersion": 11,
      "sourceType": "module"
    },
    "overrides": [
      {
        "files": [
          "tests/**/*.js"
        ],
        "extends": [
          "eslint:recommended",
          "plugin:prettier/recommended",
          "prettier",
          "plugin:jest/recommended",
          "plugin:jest/style"
        ]
      }
    ],
    "rules": {
      "brace-style": [
        2,
        "1tbs",
        {
          "allowSingleLine": false
        }
      ]
    }
  }
}
